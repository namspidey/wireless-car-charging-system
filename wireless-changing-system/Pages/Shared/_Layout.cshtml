<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - wireless_changing_system</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bootstrap-icons/font/bootstrap-icons.css">
 
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
            <div class="container">
                <!-- Brand/Logo -->
                <a class="navbar-brand" href="/">
                    <img src="/img/logo.png"
                         alt="Wireless Charging System Logo"
                         width="40"
                         height="40"
                         class="img-fluid">
                </a>

                <!-- Toggle Button cho mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Items -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Left-aligned navigation -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Home Page</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Changing Station</a>
                        </li>
                    </ul>

                    <!-- Right-aligned buttons -->
                    <div class="d-flex">
                        <a href="#" class="btn btn-outline-secondary me-2">Sign in</a>
                        <a href="#" class="btn btn-primary">Register</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer-content">
            <div class="social-icons">
                <a href="#" target="_blank" aria-label="Facebook">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="#" target="_blank" aria-label="X (Twitter)">
                    <i class="bi bi-twitter"></i>
                </a>
                <a href="#" target="_blank" aria-label="Instagram">
                    <i class="bi bi-instagram"></i>
                </a>
                <a href="#" target="_blank" aria-label="YouTube">
                    <i class="bi bi-youtube"></i>
                </a> 
                <a href="#" target="_blank" aria-label="Linkedin">
                    <i class="bi bi-linkedin"></i>
                </a>
            </div>
            <p class="copyright">
                &copy; 2025 - wireless_changing_system - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </p>
        </div>
       
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>